<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mjc813.cinema_crud.genre.service.GenreMybatisMapper">
    <insert id="insert" parameterType="GenreDto" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO genre_tbl (name)
        VALUES (#{name})
    </insert>

    <select id="selectGenre" resultType="GenreDto">
        SELECT
            id
            ,name
        from genre_tbl
    </select>

    <select id="selectIdGenre" resultType="GenreDto" parameterType="Long">
        select
        id
        ,name
        from genre_tbl
        where id = #{id}
        order by id
    </select>

    <update id="updateGenre" parameterType="GenreDto">
        update genre_tbl set
            name = #{name}
        where id = #{id}
    </update>

    <delete id="deleteGenre" parameterType="Long">
        delete from genre_tbl
        where id = #{id}
    </delete>

</mapper>